<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <meta name="description" content="">
        <meta name="keywords" content="">

        <meta name="author" content="">
        <title></title>

        <!-- Fonts and icons -->

        <!-- App css -->
        <link href="/themes/default/assets/css/output.css" rel="stylesheet" />
        <link href="/themes/default/assets/css/style.css" rel="stylesheet" />

        <!-- Custom JS -->
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
        <script src="/themes/default/assets/js/smooth.js"></script>
    </head>
    <body>

        <!-- Navigation -->
        <% if not string.match(ngx.var.request_uri, "/login") and not string.match(ngx.var.request_uri, "/register") then %>
            <% render("applications.themes.default.assets.widgets.nav") %>
        <% end %>

        <!-- Pages content -->
        <% content_for("inner") %>

        <!-- Footer -->
        <% if not string.match(ngx.var.request_uri, "/login") and not string.match(ngx.var.request_uri, "/register") then %>
            <% render("applications.themes.default.assets.widgets.footer") %>
        <% end %>

    </body>

    <!-- Javascript -->
</html>